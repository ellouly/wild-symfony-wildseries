{% extends 'base.html.twig' %}

{% block title %}Wild Séries || Liste des programmes{% endblock %}

{% block body %}
    <section class="card text-dark m-3">
        <div class="card-header bg-secondary">
            <h1>Ajouter un programme : </h1>
        </div>
        <div class="media">
            <a class="btn btn-danger text-white mx-auto m-3" href="{{ path('program_new') }}">Ajouter</a>
        </div>
    </section>

    <section class="card text-dark m-3">
        <div class="card-header bg-secondary">
            <h1>Liste des programmes : </h1>
        </div>
        <div class="media">
            <table class="table table-light table-striped table-bordered mt-3">
                <thead class="thead-dark">
                <tr>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Slug</th>
                    <th>Voir</th>
                    <th>Mettre à jour</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for program in programs %}
                    <tr>
                        <td>{{ program.title }}</td>
                        <td>{{ program.category.name }}</td>
                        <td>{{ program.slug }}</td>
                        <td>
                            <a class="btn btn-success text-white" href="{{ path('program_show', {'id': program.id}) }}">Voir</a>
                        </td>
                        <td>
                            <a class="btn btn-danger text-white" href="{{ path('program_edit', {'id': program.id}) }}">Mettre à jour</a>
                        </td>
                        <td>
                            {{ include('program/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune série de trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}