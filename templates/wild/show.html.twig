{% extends "base.html.twig" %}

{% block title %}{{ program.title}}{% endblock %}

{% block body %}

    <div class="media">
        <img class="col-sm-12 col-md-6 p-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body col-sm-12 col-md-6 p-3">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Cat√©gorie : {{ program.category.name }}</p>
            <p>{{ id }}</p>
            <div class="row">
            {% for season in seasons %}
                <a class="btn btn-danger m-3" href="{{ path('show_season',{ 'seasonId' : season.id } ) }}">
                    Saison {{ loop.index }}
                </a>
            {% endfor %}
            </div>
        </div>
    </div>
    <a class="btn btn-dark m-3" href="{{ path('wild_index') }}">
        Retour au programme
    </a>

{% endblock %}