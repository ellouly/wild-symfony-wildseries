{% extends "base.html.twig" %}

{% block title %}{{ program.title}}{% endblock %}

{% block body %}

    <div class="media">
        <img class="col-sm-12 col-md-6 p-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body col-sm-12 col-md-6 p-3">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p><strong>Catégorie :</strong> {{ program.category.name }}</p>
            <strong>Actrices et acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li>
                        <a class="text-secondary" href="{{ path('actor', {'id' : actor.id}) }}">
                            {{ actor.name }}
                        </a>
                    </li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <div class="row">
            {% for season in seasons %}
                <a class="btn btn-danger m-3" href="{{ path('season',{ 'seasonId' : season.id } ) }}">
                    Saison {{ loop.index }}
                </a>
            {% endfor %}
            </div>
        </div>
    </div>
    <a class="btn btn-dark m-3" href="{{ path('all_program') }}">
        Retour aux programmes
    </a>

{% endblock %}