{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
    {% for episode in episodes %}
        <div class="card text-dark m-3 p-3">
            <h5 class="card-header bg-dark text-white">Episode n° {{ episode.number }}</h5>
            <div class="card-body">
                <h5 class="card-title">{{episode.title}}</h5>
                <p class="card-text">{{episode.synopsis}}</p>
                <a class="btn btn-secondary" href="{{ path('show_episode', { 'id' : episode.id } ) }}">Voir</a>
            </div>
        </div>
    {% endfor %}
    <a class="btn btn-dark m-3" href="{{ path('wild_index') }}">
        Retour à la programmation
    </a>

{% endblock %}