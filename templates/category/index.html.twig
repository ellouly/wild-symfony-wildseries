{% extends 'base.html.twig' %}

{% block title %}Wild Séries || Liste des catégories{% endblock %}

{% block body %}
    <section class="card text-dark m-3">
        <div class="card-header bg-secondary">
            <h1>Ajouter une catégorie :</h1>
        </div>
        <div class="media">
            <a class="btn btn-danger text-white mx-auto m-3" href="{{ path('category_new') }}">Ajouter</a>
        </div>
    </section>

    <section class="card text-dark m-3">
        <div class="card-header bg-secondary">
            <h1>Liste des catégories :</h1>
        </div>
        <div class="media">
            <table class="table table-light table-striped table-bordered mt-3">
                <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Voir</th>
                    <th>Mettre à jour</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <a class="btn btn-success text-white" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                        </td>
                        <td>
                            <a class="btn btn-danger text-white" href="{{ path('category_edit', {'id': category.id}) }}">Mettre à jour</a>
                        </td>
                        <td>
                            {{ include('category/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune catégorie de trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
