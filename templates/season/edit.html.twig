{% extends 'base.html.twig' %}

{% block title %}Wild Séries || Mise à jour de la saison {{ season.id }}{% endblock %}

{% block body %}
    <section class="card text-dark m-3">
        <div class="card-header bg-secondary">
            <h1>Mise à jour de la saison {{ season.id }} de {{ season.program.title }}</h1>
        </div>
        <div class="p-3">
            {{ include('season/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </section>
    <a class="btn btn-dark" href="{{ path('season_index') }}">Retour aux saisons</a>
{% endblock %}
