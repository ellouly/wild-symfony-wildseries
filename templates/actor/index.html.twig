{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <section class="card text-dark m-3">
        <div class="card-header bg-secondary">
            <h1>Ajouter un acteur :</h1>
        </div>
        <div class="media">
            <a class="btn btn-danger text-white mx-auto m-3" href="{{ path('actor_new') }}">Ajouter</a>
        </div>
    </section>

<section class="card text-dark m-3">
    <div class="card-header bg-secondary">
        <h1>Liste des acteurs</h1>
    </div>
    <div class="media">
        <table class="table table-light table-striped table-bordered mt-3">
            <thead class="thead-dark">
            <tr>
                <th>Acteur</th>
                <th>Slug</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>
                <td>{{ actor.slug }}</td>
                <td>
                    <a class="btn btn-success text-white" href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                </td>
                <td>
                    <a class="btn btn-danger text-white" href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
                <td>
                    {{ include('actor/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun acteur de trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</section>
{% endblock %}
